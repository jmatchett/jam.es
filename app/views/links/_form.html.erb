	<div class="column small-12 medium-4 panel">
		<h5><strong>Shorten A URL<strong></h5>
		<%= form_for(@link, remote: true) do |f| %>
		  <% if @link.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

		      <ul>
		      <% @link.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.label :url, "URL" %>
		    <div class="subheader"><small>please be sure to include http://</small></div>
		    <%= f.text_field :url, :value => "http://" %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Shorten URL", :class => "button expand" %>
		  </div>
		<% end %>
	</div>
